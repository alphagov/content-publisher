{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "id",
    "options"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "options": {
      "$ref": "#/definitions/options"
    }
  },
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+$"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "$ref": "#/definitions/id"
          },
          "type": {
            "$ref": "#/definitions/type"
          },
          "hostname": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        }
      }
    },
    "type": {
      "type": "string",
      "enum": [
        "document_type",
        "managed_elsewhere",
        "document_type_selection"
      ]
    }
  }
}
