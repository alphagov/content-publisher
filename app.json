{
  "name": "content-publisher",
  "scripts": {
    "postdeploy": "rake db:migrate db:seed"
  },
  "env": {
    "GDS_SSO_STRATEGY": {
      "required": true
    },
    "GOVUK_APP_DOMAIN": {
      "required": true
    },
    "BASIC_AUTH_USERNAME": {
      "required": true
    },
    "BASIC_AUTH_PASSWORD": {
      "required": true
    },
    "REQUIRE_BASIC_AUTH": "true"
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
