{
  "name": "content-publisher",
  "scripts": {
    "postdeploy": "rake db:migrate db:seed"
  },
  "env": {
    "HEROKU": {
      "value": "true"
    },
    "ACTIVE_STORAGE_SERVICE": {
      "required": true,
      "value": "local"
    },
    "GDS_SSO_STRATEGY": {
      "required": true,
      "value": "mock"
    },
    "GOVUK_APP_DOMAIN": {
      "required": true,
      "value": "integration.publishing.service.gov.uk"
    },
    "GOVUK_WEBSITE_ROOT": {
      "required": true,
      "value": "http://localhost"
    },
    "JWT_AUTH_SECRET": {
      "generator": "secret"
    },
    "STUB_PUBLISHING_API": {
      "required": true,
      "value": "true"
    },
    "STUB_CONTENT_API": {
      "required": true,
      "value": "true"
    },
    "GITHUB_API_TOKEN": {
      "required": "true"
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
