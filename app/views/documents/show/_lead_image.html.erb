<% lead_image_block = if @edition.lead_image_revision %>
  <% capture do %>
    <%= render "components/image_meta", {
      src: url_for(@edition.lead_image_revision.thumbnail),
      meta: {
        alt_text: @edition.lead_image_revision.alt_text,
        caption: @edition.lead_image_revision.caption,
        credit: @edition.lead_image_revision.credit,
      }
    } %>
  <% end %>
<% else %>
  <% capture do %>
    <%= t("documents.show.lead_image.no_lead_image") %>
    <% link_to t("documents.show.lead_image.upload_image"),
               images_path(@edition.document),
               class: "govuk-link" %>
  <% end %>
<% end %>

<%= render "components/summary", {
  id: "lead-image",
  title: {
    text: t("documents.show.lead_image.title"),
    change_url: !@edition.live && images_path(@edition.document),
  },
  block: lead_image_block
} %>
