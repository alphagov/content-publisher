<%= render "components/inset_prompt", {
  error: true,
  title: t("documents.show.failed_to_publish.title"),
  description: render_govspeak(description_govspeak),
  data_attributes: {
    gtm: "scheduled-publish-failed",
    "gtm-visibility-tracking": true,
  },
} %>
