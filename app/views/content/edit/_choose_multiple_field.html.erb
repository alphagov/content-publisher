<%
  data ||= {}
  selected = edition.contents[field.name] || data[field.name]
%>
<%= render "govuk_publishing_components/components/checkboxes", {
  heading: field.label,
  id: "choose-multiple-#{field.name}-field",
  name: "#{field.name}[]",
  items: field.options.map do |option|
    {
      label: option["label"],
      value: option["name"],
      checked: selected&.include?(option["name"]),
    }
  end
} %>
